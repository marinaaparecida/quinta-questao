#include <stdio.h>
#include <locale.h>

int verifique (int n){

	return n;
}

int main(){
	
	setlocale(LC_ALL, "Portuguese_Brazil");
	
	int numero;
	int resultado;
	
	printf("Verifique se o número é positivo ou negativo\n\n");
	scanf("%d",&numero);
	
	resultado=verifique(numero);
	
	if(resultado > 0 ){
		
		printf("\nO número é positivo");
	}
	else if(resultado < 0 ){
		
			if(resultado > 0 ){
		
		printf("\nO número negativo");
	}
	}
	else{		
		printf("\nO número é neutro");
	
	}
	}
